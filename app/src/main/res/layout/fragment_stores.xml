<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tools:context="org.android.srujanjha.bookmybook.Stores$PlaceholderFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="flipkart"
        android:clickable="true"
        android:onClick="btnStore">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:src="@drawable/flipkart"/>
        <TextView
            android:id="@+id/txtFlipkart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="N.A."/>
        <ImageButton
            android:id="@+id/iB1"
            android:visibility="invisible"
            android:layout_weight="0.7"
            android:tag="flipkart"
            android:onClick="refresh"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:src="@android:drawable/ic_menu_rotate"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="amazon"
        android:clickable="true"
        android:onClick="btnStore">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:src="@drawable/amazon"/>
        <TextView
            android:id="@+id/txtAmazon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="N.A."/>
        <ImageButton
            android:id="@+id/iB2"
            android:visibility="invisible"
            android:layout_weight="0.7"
            android:tag="amazon"
            android:onClick="refresh"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_rotate"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="infibeam"
        android:clickable="true"
        android:onClick="btnStore">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:src="@drawable/infibeam"/>
        <TextView
            android:id="@+id/txtInfibeam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="N.A."/>
        <ImageButton
            android:id="@+id/iB3"
            android:visibility="invisible"
            android:layout_weight="0.7"
            android:tag="infibeam"
            android:onClick="refresh"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_rotate"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="rediff"
        android:clickable="true"
        android:onClick="btnStore">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:src="@drawable/rediffbooks"/>
        <TextView
            android:id="@+id/txtRediff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="N.A."/>
        <ImageButton
            android:id="@+id/iB4"
            android:visibility="invisible"
            android:layout_weight="0.7"
            android:tag="rediff"
            android:onClick="refresh"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_rotate"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="crossword"
        android:clickable="true"
        android:onClick="btnStore">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:src="@drawable/crossword"/>
        <TextView
            android:id="@+id/txtCrossword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="N.A."/>
        <ImageButton
            android:id="@+id/iB5"
            android:visibility="invisible"
            android:layout_weight="0.7"
            android:tag="crossword"
            android:onClick="refresh"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_rotate"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="uread"
        android:clickable="true"
        android:onClick="btnStore">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:src="@drawable/uread"/>
        <TextView
            android:id="@+id/txtuRead"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="N.A."/>
        <ImageButton
            android:id="@+id/iB6"
            android:visibility="invisible"
            android:layout_weight="0.7"
            android:tag="uread"
            android:onClick="refresh"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_rotate"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:tag="landmark"
        android:clickable="true"
        android:onClick="btnStore">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:src="@drawable/landmark"/>
        <TextView
            android:id="@+id/txtLandmark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="N.A."/>
        <ImageButton
            android:id="@+id/iB7"
            android:visibility="invisible"
            android:layout_weight="0.7"
